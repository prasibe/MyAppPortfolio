<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="nanodegree.myappportfolio.MyNanodegreeApps"
    tools:showIn="@layout/activity_my_nanodegree_apps"
    android:touchscreenBlocksFocus="false">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp">

        <Button
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:text="SPOTIFY STREAMER"
            android:id="@+id/spotifystreamer"
            android:layout_gravity="center_horizontal"
            android:onClick="showToast"
            android:shadowColor="#014983"
            android:textColor="#e5f0f8"
            android:background="#34a9fc"
            android:backgroundTint="#58a8df" />

        <Button
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:text="FOOTBALL SCORES APP"
            android:id="@+id/scoresapp"
            android:layout_gravity="center_horizontal"
            android:onClick="showToast"
            android:shadowColor="#014983"
            android:textColor="#e5f0f8"
            android:background="#34a9fc"
            android:backgroundTint="#58a8df"
            android:layout_marginTop="10dp"
            />

        <Button
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:text="LIBRARY APP"
            android:id="@+id/libapp"
            android:layout_gravity="center_horizontal"
            android:onClick="showToast"
            android:shadowColor="#014983"
            android:textColor="#e5f0f8"
            android:background="#34a9fc"
            android:backgroundTint="#58a8df"
            android:layout_marginTop="10dp"
            />

        <Button
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:text="BUILD IT BIGGER"
            android:id="@+id/bigger"
            android:layout_gravity="center_horizontal"
            android:onClick="showToast"
            android:shadowColor="#014983"
            android:textColor="#e5f0f8"
            android:background="#34a9fc"
            android:backgroundTint="#58a8df"
            android:layout_marginTop="10dp"
            />

        <Button
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:text="XYZ READER"
            android:id="@+id/xyzreader"
            android:layout_gravity="center_horizontal"
            android:onClick="showToast"
            android:shadowColor="#014983"
            android:textColor="#e5f0f8"
            android:background="#34a9fc"
            android:backgroundTint="#58a8df"
            android:layout_marginTop="10dp"
            />

        <Button
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:text="CAPSTONE: MY OWN APP"
            android:id="@+id/myownapp"
            android:layout_gravity="center_horizontal"
            android:onClick="showToast"
            android:shadowColor="#014983"
            android:textColor="#e5f0f8"
            android:background="#34a9fc"
            android:backgroundTint="#58a8df"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Nanodegree Apps!"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#0686fc" />
</RelativeLayout>
